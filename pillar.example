# -*- coding: utf-8 -*-
# vim: ft=yaml
# yamllint disable rule:comments-indentation
---
mosquitto:
  install:
      # Install rootless containers running as dedicated user.
    rootless: true
      # When applying `clean` states, also remove application data.
      # Setting this to true might incur accidental data loss!
    remove_all_data_for_sure: false
    # This will be serialized into mosquitto.conf
    # https://github.com/eclipse/mosquitto/blob/master/mosquitto.conf
    # https://mosquitto.org/man/mosquitto-conf-5.html
  config:
    protocol: mqtt
    log_dest: stdout
      # set multiple of the same type with lists
    log_type:
      - error
      - warning
      - notice
      - information
    persistence: true
      # set listener-specific configuration with maps
      # listeners will be serialized last
      # unset default values by setting them to null
    listener 1883:
      protocol: mqtt

  lookup:
    rootgroup: root
    compose:
      create_pod: null
      pod_args: null
      project_name: mosquitto
      remove_orphans: true
      service:
        container_prefix: null
        ephemeral: true
        pod_prefix: null
        restart_policy: on-failure
        restart_sec: 2
        separator: null
        stop_timeout: null
    paths:
      base: /opt/containers/mosquitto
      compose: docker-compose.yml
      config_mosquitto: mosquitto.env
      config: config
      data: data
      log: log
    user:
      groups: []
      home: null
      name: mosquitto
      shell: /usr/sbin/nologin
      uid: null
      gid: null
    containers:
      mosquitto:
        image: docker.io/library/eclipse-mosquitto

  tofs:
      # The files_switch key serves as a selector for alternative
      # directories under the formula files directory. See TOFS pattern
      # doc for more info.
      # Note: Any value not evaluated by `config.get` will be used literally.
      # This can be used to set custom paths, as many levels deep as required.
    files_switch:
      - any/path/can/be/used/here
      - id
      - roles
      - osfinger
      - os
      - os_family

      # All aspects of path/file resolution are customisable using the options below.
      # This is unnecessary in most cases; there are sensible defaults.
      # Default path: salt://< path_prefix >/< dirs.files >/< dirs.default >
      # I.e.: salt://mosquitto/files/default
      # path_prefix: template_alt
      # dirs:
      #   files: files_alt
      #   default: default_alt
      # The entries under `source_files` are prepended to the default source files
      # given for the state
    source_files:
      Eclipse Mosquitto compose file is managed:
        - docker-compose_alt.yml
        - docker-compose_alt.yml.j2
      mosquitto environment file is managed:
        - mosquitto_alt.env
        - mosquitto_alt.env.j2
